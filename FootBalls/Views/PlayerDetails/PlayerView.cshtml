@model FootBalls.Models.TblPlayer
@{
    ViewBag.Title = "Player view";
    Layout = "~/Views/Shared/_PlayerViewLayout.cshtml";
}

@if (Session["UserId"] != null)
{
    <div class="topnav">
        <a href="@Url.Action("Logout", "Account")">Logout</a>
    </div>
}
else
{
    <div class="topnav">
        @*<a href="@Url.Action("Logout", "Account")">Logout</a>*@
    </div>
}

    <div class="topnav1">
        <h4>Welcome to @Model.Player Details!!</h4>
        @if (Session["UserId"] != null && Convert.ToInt32(Session["UserId"].ToString()) == Model.UserId)
        {
            <a href="@Url.Action("EditProfile", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class="btn btn-info" value="Edit Profile" style="background-color:whitesmoke;" /> </a>
        }
    </div>
<br />
<br />

