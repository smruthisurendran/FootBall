        <a href="@Url.Action("Player", "PlayerDetails")" style="text-decoration:none;color:whitesmoke;">>>Home</a>
    </div>

    <div style="font-size:larger;color:whitesmoke;font-family:'Times New Roman';">
        <h3>Welcome to @Model.Player Details!!</h3>
    </div> *@
@if (Session["UserId"] != null && Convert.ToInt32(Session["UserId"].ToString()) == Model.UserId)
{
    <div style="text-align:right;margin-right:16px;">

        <a href="@Url.Action("Teams", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class="btn btn-info" value="Players Teams" style="background-color:whitesmoke;" /> </a>


        <a href="@Url.Action("Championship", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class="btn btn-outline-info" value="Registered ChampionShips" style="background-color:whitesmoke;" /> </a>


        <a href="@Url.Action("Matches", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class="btn btn-info" value="Players Matches" style="background-color:whitesmoke;" /> </a>


        <a href="@Url.Action("PlayersAwards", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class="btn btn-info" value="Awards" style="background-color:whitesmoke;" /> </a>


        <a href="@Url.Action("RequestForPlayer", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class="btn btn-info" value="Players Requests" style="background-color:whitesmoke;" /></a>


        <a href="@Url.Action("MyRequest", "PlayerDetails", new RouteValueDictionary(new { id = Model.PlayerId }))"> <input type="button" class=" btn btn-info" value="My Request" style="background-color:whitesmoke;" /> </a>


    </div>
}
<br />
<br />
<div align="center">

    <form style="color:whitesmoke;font-size:medium;">
        <fieldset>
            <div>
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.PlayerId)
                <div class="form-row">
                    <div class="form-group">

                        <br />
                        <br />
                        @if (ViewBag.ImageData != null)
                        {
                            <div>
                                <img src="@ViewBag.ImageData" width="150" height="200" />
                            </div>
                        }
                        else
                        {
                            <div>
                                <img src="~/Content/images/no-image-480x480.png" width="150" height="200" />
                            </div>
                        }
                        <br />
                        <div>
                            @Html.DisplayFor(model => model.Player)
                        </div>

                    </div> 
                        <div class="form-group">

                        <div>
                            <label><b> DOB : </b></label>
                            @Html.DisplayFor(model => model.DOB)
                        </div>
                        <br />
                        <br />
                        @*<div style="margin-left:10px;">*@
                        <div>
                            <label><b>Country : </b></label>
                            @Html.DisplayFor(model => model.TblCity.TblRegion.TblCountry.Country)
                        </div>
                        <br />
                        <br />
                            
                        <div>
                            <label><b> Region : </b></label>
                            @Html.DisplayFor(model => model.TblCity.TblRegion.Region)
                        </div>
                        <br />
                        <br />
                        <div>
                            <label><b>City : </b></label>
                            @Html.DisplayFor(model => model.TblCity.City)
                        </div>
                        <br />
                        <br />

                        @*<div style="margin-left:10px;">*@
                        <div>
                            <label><b>Mobile Number :</b></label>
                            @Html.DisplayFor(model => model.Mobile)
                        </div>


                    </div>


                    <div class="form-group">


                        <div>
                            <label><b> Playing Place : </b></label>
                            @Html.DisplayFor(model => model.TblPlayingPlace.PlayingPlace)
                        </div>
                        <br />
                        <br />
                        @*<div style="margin-right:40px;">*@
                        <div>
                            <label><b>Length :</b></label>
                            @Html.DisplayFor(model => model.Length)
                        </div>
                        <br />
                        <br />

                        @*<div style="margin-right:50px;">*@
                        <div>
                            <label><b>Weight :</b></label>
                            @Html.DisplayFor(model => model.Weight)
                        </div>
                        <br />
                        <br />

                        @*<div style="margin-right:130px;">*@
                        <div>
                            <label><b>Championship :</b></label>

                        </div>
                        <br />
                        <br />

                        @*<div style="margin-right:80px;">*@
                        <div>
                            <label><b>Matches :</b></label>

                        </div>
                        <br />
                        <br />

                        @*<div style="margin-right:100px;"><div>*@
                        <div>
                            <label><b>Total Goals :</b></label>

                        </div>
                    </div>

                </div>
            </div>
        </fieldset>
    </form>
</div>
<br />
<br />
